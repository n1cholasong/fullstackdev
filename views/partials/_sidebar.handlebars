<aside class="sidebar poppins" data-sidebar>
    {{#if user}}
    <div class="sidebar-head">
        <div class="profile-menu">
            <a href="/user/profile/{{user.id}}" class="profile-pic">
                {{#if user.profilePicURL}}
                <img src="{{user.profilePicURL}}" class="user-profile-pic" alt="profile-pic">
                {{else}}
                <div class="default-profile-pic">{{firstChar user.fname}}{{firstChar user.lname}}</div>
                {{/if}}
            </a>
        </div>
        <div class=" sidebar-hidden fullname">{{user.fname}} {{user.lname}}</div>
        <div class=" sidebar-hidden username">{{user.username}}</div>
    </div>
    {{/if}}
    <div class="sidebar-main">
        <ul class="nav-list">
            {{!-- General Page --}}
            <li id="" class="nav-item">
                <a class="nav-link" href="/">
                    <span class="nav-icon material-symbols-rounded">home</span>
                    <div class="sidebar-hidden">Home</div>
                </a>
            </li>
            {{#if user}}
            <li id="mycourse" class="nav-item">
                <a class="nav-link" href="/mycourse">
                    <span class="nav-icon material-symbols-rounded">library_books</span>
                    <div class="sidebar-hidden">My Courses</div>
                </a>
            </li>
            {{/if}}
            <li id="forum" class="nav-item">
                <a class="nav-link" href="/forum">
                    <span class="nav-icon material-symbols-rounded">forum</span>
                    <div class="sidebar-hidden">Forum</div>
                </a>
            </li>

            {{#if user}}
            {{!-- Instructor Page --}}
            {{!-- <div class="sidebar-hidden sidebar-subtext">Instructor</div> --}}
            {{!-- <li id="course/view" class="nav-item">
                <a class="nav-link" href="/course/view">
                    <span class="nav-icon material-symbols-rounded">note_alt</span>
                    <div class="sidebar-hidden">Manage Courses</div>
                </a>
            </li> --}}

            {{!-- Admin Page --}}
            {{#ifCond user.roleId 1 }}
            <div class="sidebar-hidden sidebar-subtext">Admin</div>
            <li class="nav-item">
                <a class="nav-link" href="#">
                    <span class="nav-icon material-symbols-rounded">grid_view</span>
                    <div class="sidebar-hidden">Dashboard</div>
                </a>
            </li>
            <li id="admin/manageAccounts" class="nav-item">
                <a class="nav-link" href="/admin/manageAccounts">
                    <span class="nav-icon material-symbols-rounded">manage_accounts</span>
                    <div class="sidebar-hidden">Manage Users</div>
                </a>
            </li>
            <li id="admin/reviewManagement" class="nav-item">
                <a class="nav-link" href="/admin/reviewManagement">
                    <span class="nav-icon material-symbols-rounded">view_list</span>
                    <div class="sidebar-hidden">Manage Reports</div>
                </a>
            </li>
            <li id="course/view" class="nav-item">
                <a class="nav-link" href="/course/view">
                    <span class="nav-icon material-symbols-rounded">note_alt</span>
                    <div class="sidebar-hidden">Manage Courses</div>
                </a>
            </li>
            <li id="payment/Vouchers" class="nav-item">
                <a class="nav-link" href="/payment/Vouchers">
                    <span class="nav-icon material-symbols-rounded">local_offer</span>
                    <div class="sidebar-hidden">My Coupons</div>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">
                    <span class="nav-icon material-symbols-rounded">category</span>
                    <div class="sidebar-hidden">Manage Services</div>
                </a>
            </li>
            {{/ifCond}}
            {{/if}}
        </ul>
    </div>
    <div class="sidebar-foot">
        <ul class="nav-list">
            <li class="nav-item">
                <a class="nav-link" href="#">
                    <span class="nav-icon material-symbols-rounded">info</span>
                    <div class="sidebar-hidden">FAQ</div>
                </a>
            </li>
            {{#if user}}
            <li class="nav-item">
                <a class="nav-link" href="/user/logout">
                    <span class="nav-icon material-symbols-rounded">logout</span>
                    <div class="sidebar-hidden">Logout</div>
                </a>
            </li>
            {{else}}
            <li class="nav-item">
                <a class="nav-link" href="/user/login">
                    <span class="nav-icon material-symbols-rounded">login</span>
                    <div class="sidebar-hidden">Login</div>
                </a>
            </li>
            {{/if}}
        </ul>
    </div>
</aside>