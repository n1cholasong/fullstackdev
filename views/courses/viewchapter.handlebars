<div class="container">
	<div class="entry-card row" data-step="1">
		<input type="hidden" name="" id="">
		<div class="entry-box col">
			<h1>Plan your content</h1>
		</div>
		{{#if chapters}}
		<table>
			<tr>
				<th>Chapter Num</th>
				<th>Upload</th>
			</tr>
			{{#each chapters}}
			{{#if @last}}
			<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog"
				aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
				<div class="modal-dialog modal-dialog-centered" role="document">
					<div class="modal-content">
						<div class="modal-header">
							<h5 class="modal-title" id="exampleModalLongTitle">Delete?</h5>
							<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
							</button>
						</div>
						<div class="modal-body">
							Confirm delete?
						</div>
						<div class="modal-footer">
							<form method="post" action="/course/Chapter/delete/{{id}}">
								<button type="submit" class="btn btn-primary">Yes</button>
							</form>
							<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
						</div>
					</div>
				</div>
			</div>

			<tr>
				<td>
					<h2>Chapter {{ChapterNum}}</h2>
				</td>
				<td colspan="3"><a href="/course/video/upload/{{id}}" class="btn btn-warning">Upload Video</a></td>
				{{!-- <td><a href="/course/quiz/create/{{id}}" class="btn btn-warning">Add Quiz</a></td> --}}
				<td><a href="/course/quiz/view/{{id}}" class="btn btn-warning">View Quiz</a></td>
				<td><a href="/course/quiz/edit/{{id}}" class="btn btn-warning">Edit Quiz</a></td>
				<td>
					<button type="button" class="btn btn-danger" data-bs-target="#deleteModal"
						data-bs-toggle="modal">
						Delete
					</button>
				</td>
			</tr>
			{{else}}
			<tr>
				<td>
					<h2>Chapter {{ChapterNum}}</h2>
				</td>
				<td colspan="3"><a href="/course/video/upload/{{id}}" class="btn btn-warning">Upload Video</a></td>
				{{!-- <td><a href="/course/quiz/create/{{id}}" class="btn btn-warning">Add Quiz</a></td> --}}
				<td><a href="/course/quiz/view/{{id}}" class="btn btn-warning">View Quiz</a></td>
				<td><a href="/course/quiz/edit/{{id}}" class="btn btn-warning">Edit Quiz</a></td>
				{{!-- <td>
					<form method="post" action="/course/Chapter/delete/{{id}}">
						<input type="submit" value="Delete Chapter" class="btn btn-warning">
					</form> --}}
				</td>
			</tr>
			{{/if}}
			{{/each}}
		</table>
		<form method="post">
			<input type="hidden" name="cid" value="{{cid}}">
			<input type="hidden" name="chapterNum" value="{{chapters.length}}">
			<input type="submit" class="btn btn-warning" value="Add Chapters">
		</form>
		{{else}}
		<h2>No Chapter created!!!</h2>
		<form method="post">
			<input type="hidden" name="cid" value="{{cid}}">
			<input type="hidden" name="chapterNum" value="None">
			<input type="submit" class="btn btn-warning" value="Create Chapters">
		</form>

		{{/if}}
	</div>
</div>