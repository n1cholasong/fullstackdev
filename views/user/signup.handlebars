<div class="container signup admin">
	<div class="entry-card">
		<div class="entry-card-body row">
			<div class="img-box col">
				<img src="/img/administration/learning_rafiki.svg" alt="">
			</div>
			<div class="entry-box col">	
				<h2 class="card-title">Create an Account</h2>
				<h3 class="card-subtitle mb-5">STEP 1 OF 1</h3>
				{{> _flashmsg }}
				<form method="post" action="">
					<div class="form-group">
						<label for="email">Email<span class="text-danger">*</span></label>
						<input type="email" name="email" class="form-control" value="{{email}}" required>
					</div>
					<div class="form-group">
						<label for="username">Username<span class="text-danger">*</span></label>
						<input type="text" name="username" class="form-control" value="{{username}}" required>
					</div>
					<div class="form-group">
						<label for="password">Password<span class="text-danger">*</span></label>
						<input type="password" name="password" class="form-control" required>
					</div>
					<div class="form-group">
						<label for="password2">Confirm Password<span class="text-danger">*</span></label>
						<input type="password" name="password2" class="form-control" required>
					</div>
					<button type="submit" class="btn btn-main mt-2">Sign up</button>
				</form>
			</div>
		</div>
	</div>
</div>