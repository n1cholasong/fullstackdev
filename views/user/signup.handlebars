<div class="container signup admin">
	<form method="post" action="" class="entry-form" data-multi-step>
		{{!-- STEP 1 OF 3 --}}
		<div class="entry-card row" data-step="1">
			<div class="img-box col">
				<img src="/img/administration/learning_rafiki.svg" alt="">
			</div>
			<div class="entry-box col">
				<h2 class="card-title">Create an Account</h2>
				<h3 class="card-subtitle mb-5">STEP 1 OF 3</h3>
				{{> _flashmsg }}

				<div class="form-group">
					<label for="email">Email<span class="text-danger">*</span></label>
					<input type="email" name="email" id="email" class="form-control" value="{{email}}" required>
				</div>
				<div class="form-group">
					<label for="password">Password<span class="text-danger">*</span></label>
					<input type="password" name="password" id="password" class="form-control" required>
				</div>
				<div class="form-group">
					<label for="password2">Confirm Password<span class="text-danger">*</span></label>
					<input type="password" name="password2" id="password2" class="form-control" required>
				</div>
				<button type="submit" class="btn btn-main mt-2">Sign up</button>
				<p class="subtext mt-3">Already have an account? <a href="/user/login">Log in</a></p>
			</div>
		</div>
		{{!-- STEP 2 OF 3 --}}
		<div class="entry-card row" data-step="2">
			<div class="entry-box col">
				<h2 class="card-title">Personal Details</h2>
				<h3 class="card-subtitle mb-5">STEP 2 OF 3</h3>
				<div id="input-row-1">
					<div class="form-group">
						<label for="fname">First Name<span class="text-danger">*</span></label>
						<input type="text" name="fname" id="fname" class="form-control" value="{{fname}}" required>
					</div>
					<div class="form-group">
						<label for="lname">Last Name<span class="text-danger">*</span></label>
						<input type="text" name="lname" id="lname" class="form-control" value="{{lname}}" required>
					</div>
				</div>
				<div id="input-row-2" class="form-group">
					<label for="username">Username<span class="text-danger">*</span></label>
					<input type="text" name="username" id="username" class="form-control" value="{{username}}" required>
				</div>
				<div id="input-row-3">
					<div class="form-group">
						<label for="gender">Gender</label>
						<select name="gender" id="gender" class="form-select">
							<option value="null"></option>
							<option value="M">Male</option>
							<option value="F">Female</option>
						</select>
					</div>
					<div class="form-group">
						<label for="birthday">Birthday</label>
						<input type="date" name="birthday" id="birthday" class="form-control">
					</div>
				</div>
				<div id="input-row-4" class="form-group">
					<label for="country">Country</label>
					<select id="country" name="country" class="form-select">

						<option value=""></option>
						{{#each country}}
						<option value="{{this.code}}">{{this.name}}</option>
						{{/each}}

					</select>
					<div>{{countrySelect}}</div>
				</div>
			</div>
			<div class="img-box col">
				<img src="" alt="">
			</div>
		</div>
		{{!-- STEP 3 OF 3 --}}
		<div class="entry-card row" data-step="3">
			<div class="entry-box col">
				<h2 class="card-title">What do you want to learn?</h2>
				<h3 class="card-subtitle mb-5">STEP 3 OF 3</h3>
				<div class="entry-form interest mb-4">
					<label for="photography" class="checkbox-items">
						<input type="checkbox" name="interest" id="photography" value="photography">
						<span class="checkbox-label">Photography</span>
					</label>
					<label for="science" class="checkbox-items">
						<input type="checkbox" name="interest" id="science" value="science">
						<span class="checkbox-label">Science</span>
					</label>
					<label for="programming" class="checkbox-items">
						<input type="checkbox" name="interest" id="programming" value="programming">
						<span class="checkbox-label">Programming</span>
					</label>

					<label for="diy" class="checkbox-items">
						<input type="checkbox" name="interest" id="diy" value="diy">
						<span class="checkbox-label">DIY</span>
					</label>
					<label for="productivity" class="checkbox-items">
						<input type="checkbox" name="interest" id="productivity" value="productivity">
						<span class="checkbox-label">Productivity</span>
					</label>
					<label for="artsncrafts" class="checkbox-items">
						<input type="checkbox" name="interest" id="artsncrafts" value="artsncrafts">
						<span class="checkbox-label">Arts n' Craft</span>
					</label>
					<label for="mathematics" class="checkbox-items">
						<input type="checkbox" name="interest" id="mathematics" value="mathematics">
						<span class="checkbox-label">Mathematics</span>
					</label>
					<label for="language" class="checkbox-items">
						<input type="checkbox" name="interest" id="language" value="langauge">
						<span class="checkbox-label">Language</span>
					</label>
					<label for="selfhelp" class="checkbox-items">
						<input type="checkbox" name="interest" id="selfhelp" value="selfhelp">
						<span class="checkbox-label">Self Help</span>
					</label>
				</div>
				<button type="submit" class="btn-main mt-2">Sign up</button>
			</div>
			<div class="img-box col">
				<img src="" alt="">
			</div>
		</div>
	</form>
</div>