<div class="container manage">
    <div class="d-flex justify-content-between pb-4">
        <h2 class="m-0">Category Management</h2>
        <button type="button" class="btn btn-main" data-bs-toggle="modal" data-bs-target="#exampleModal"><i
                class="fa-solid fa-plus me-2"></i>New category</button>
    </div>
    {{>_flashmsg}}
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Create new category</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/admin/manageCategory/create" method="post" id="createCategory" class="entry-form">
                        <div class="mb-3">
                            <label for="title" class="form-label">Title<span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="title" required>
                        </div>
                        <div class="mb-3">
                            <label for="description" class="col-form-label">Description<span
                                    class="text-danger">*</span></label>
                            <textarea class="form-control" id="description" required></textarea>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-main" form="createCategory">Create</button>
                </div>
            </div>
        </div>
    </div>

    <div>
        <table id="categories" class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Destription</th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {{#if user}}
                {{#each categories}}
                <tr>
                    <td>{{id}}</td>
                    <td>{{title}}</td>
                    <td>{{description}}</td>
                    <td>
                        {{#if active}}
                        <span class="text-success">Active</span>
                        {{else}}
                        <span class="text-danger">Inctive</span>
                        {{/if}}
                    </td>
                    <td>
                        <div class="dropdown user-management">
                            <button class="btn icon p-0" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-ellipsis-v"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end text">
                                {{#if active}}
                                <li><a class="dropdown-item text-danger" href="/admin/manageCategory/deactivate{{id}}"
                                        data-bs-toggle="modal"
                                        data-bs-target="#deactivateAccountBackdrop_{{id}}">Deactivate Category</a></li>
                                {{else}}
                                <li><a class="dropdown-item text-success" href="/admin/manageCategory/activate/{{id}}"
                                        data-bs-toggle="modal"
                                        data-bs-target="#deactivateAccountBackdrop_{{id}}">Activate Category</a></li>
                                {{/if}}
                            </ul>
                        </div>
                        <!-- De-activate Modal -->
                        <form action="/admin/deactivateAccount/{{id}}" method="POST">
                            <div class="modal fade" id="deactivateAccountBackdrop_{{id}}" data-bs-backdrop="static"
                                data-bs-keyboard="false" tabindex="-1" aria-labelledby="deactivateAccountBackdropLabel"
                                aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <!-- Modal Header -->
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="deactivateAccountBackdropLabel">Deactivate
                                                Account</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                        </div>
                                        <!-- Modal body -->
                                        <div class="modal-body">
                                            <p>
                                                Are you sure you want to <strong>deactivate @{{username}}'s
                                                    account</strong>.
                                            </p>
                                        </div>
                                        <!-- Modal footer -->
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-outline"
                                                data-bs-dismiss="modal">Cancel</button>
                                            <button type="submit" class="btn btn-danger">Deactivate</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>

                        <!-- Delete Modal -->
                        <form action="/admin/deleteAccount/{{id}}" method="POST">
                            <div class="modal fade" id="staticBackdrop_{{id}}" data-bs-backdrop="static"
                                data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel"
                                aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <!-- Modal Header -->
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="staticBackdropLabel">Delete Account</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                        </div>
                                        <!-- Modal body -->
                                        <div class="modal-body">
                                            <p>
                                                Are you sure you want to <strong>permanently delete @{{username}}'s
                                                    account</strong>. You cannot undo this action.
                                            </p>
                                        </div>
                                        <!-- Modal footer -->
                                        <div class="modal-footer">
                                            <button type="submit" class="btn btn-danger">Delete</button>
                                            <button type="button" class="btn btn-secondary"
                                                data-bs-dismiss="modal">Cancel</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </td>
                </tr>
                {{/each}}
                {{/if}}
            </tbody>
        </table>
    </div>
</div>

<script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.11.3/js/dataTables.bootstrap5.min.js"></script>
<script>
    $(document).ready(function () {
        $('#categories').DataTable();
    });
</script>