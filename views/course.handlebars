<div class="course">
    <div class="banner text d-flex align-items-center mt-3">
        <div class="container d-flex justify-content-between">
            <div class="course-info">
                <h1>Python 101</h1>
                <a href="#">
                    <p>@Username</p>
                </a>
                <p class="ratings">
                    5.0
                    <span class="star">
                        <i class="fa-solid fa-star"></i>
                        <i class="fa-solid fa-star"></i>
                        <i class="fa-solid fa-star"></i>
                        <i class="fa-solid fa-star"></i>
                        <i class="fa-solid fa-star"></i>
                    </span>
                    <span class="user-count">
                        (100)
                    </span>
                </p>
                <a href="#" class="btn flex-grow-0" role="button">Enroll Now</a>
            </div>
            <div class="course-thumbnail">
                <img src="/img/carousel/grassland.jpg" alt="">
            </div>
        </div>
    </div>
    <div class="container d-flex flex-column align-items-center">
        <div class="card course-content">
            <b class="ps-3 pt-1">Course Content</b>
        </div>
        <div class="card course-description">
            <b class="ps-3 pt-1">Description</b>
        </div>
        <div class="card course-review">
            <b class="ps-3 pt-1">Review</b>
            <div class="container">
                {{#if reviews}}
                <div class="card card-body">
                    <h3 class="text-primary">Review</h3>
                    {{#each reviews}}
                    <div class="card border-primary mb-2 w-100 mx-auto">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-12 col-md-12 col-lg-10">
                                    <p class="text-info">{{userName}}</p>
                                </div>
                                <div class="col-sm-12 col-md-12 col-lg-10">
                                    <p class="font-italic">rating</p>
                                    <p class="text-info">{{rating}}</p>
                                </div>
                                <div class="col-sm-12 col-md-12 col-lg-10">
                                    <p class="font-italic">Review</p>
                                    <p class="text-info">{{review}}</p>
                                </div>
                                <div class="col-lg-2">
                                    <p>
                                        <a href="/video/editVideo/{{id}}" class="card-link mb-2">
                                            <i class="fas fa-pencil-alt"></i>
                                            Edit
                                        </a>
                                    </p>
                                    <p>
                                        <a href="/video/deleteVideo/{{id}}" class="card-link" data-toggle="confirmation"
                                            data-title="Confirm delete?">
                                            <i class="far fa-trash-alt"></i>
                                            Delete
                                        </a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
                {{else}}
                <h3>No videos jotted</h3>
                {{/if}}
            </div>
        </div>
    </div>
</div>